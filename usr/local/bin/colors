#!/bin/env bash
# Description: Metadata for dmenu stuff

# dmenu colors
if [[ "$DESKTOP_SESSION" == "dusk" ]]; then
  bg="#010810"
  altbg="#000000"
  fg="#0FB948"
elif [[ "$DESKTOP_SESSION" == "dwm" ]]; then
  bg="#1E222A"
  altbg="#5C6370"
  fg="#ABB2BF"
elif [[ "$DESKTOP_SESSION" == "Qtile" ]]; then
  bg="#282a36"
  altbg="#555555"
  fg="#9C27A8"
elif [[ "$DESKTOP_SESSION" == "i3" ]]; then
  bg="#2E3440"
  altbg="#4C566A"
  fg="#D8DEE9"
elif [[ "$DESKTOP_SESSION" == "Xmonad" ]]; then
  bg="#282828"
  altbg="#928374"
  fg="#ebdbb2"
elif [[ "$DESKTOP_SESSION" == "bspwm" ]]; then
  bg="#1a1b26"
  altbg="#444b6a"
  fg="#a9b1d6"
elif [[ "$DESKTOP_SESSION" == "spectrwm" ]]; then
  bg="#2b3339"
  altbg="#4b565c"
  fg="#d3c6aa"
fi
